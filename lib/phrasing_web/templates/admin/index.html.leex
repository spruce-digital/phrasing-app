<h1>Danger Zone</h1>

<hr />

<h2>Languages</h2>

<%= for l <- @languages do %>
  <%= l.code %>: <%= l.name %> (<%= l.script %>)
<% end %>

<%= f = form_for @language_changeset, "#", [phx_submit: :create_language] %>
  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :code %>
  <%= text_input f, :code %>
  <%= error_tag f, :code %>

  <%= label f, :script %>
  <%= text_input f, :script %>
  <%= error_tag f, :script %>

  <%= submit "Save" %>
</form>
