<!-- This is rendered within an <aside class="aside\-\-aside" /> element -->
<section class="drawer" phx-hook="Adder">
  <%= if @open do %>
    <%= form_for @changeset, "#", [phx_submit: :submit], fn form -> %>
      <%= render "_controls.html", Map.put(assigns, :form, form) %>
      <%= render "_phrase.html", Map.put(assigns, :form, form) %>
      <%= render "_card.html", Map.put(assigns, :form, form) %>
    <% end %>
  <% end %>
</section>
