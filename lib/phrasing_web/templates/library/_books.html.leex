<section class="library--books">
  <div class="title-bar">
    <h2 class="title">Books</h2>
    <%= link to: Routes.book_path(@socket, :new) do %>
      <i class="fal fa-plus"></i>
    <% end %>
  </div>

  <%= if Enum.empty? @books do %>
    <div class="empty-message">
      You don't have any books. <br/>
      Start by adding one by clicking the plus button in the upper right hand corner.
    </div>
  <% else %>
    <div class="library---slider">
      <%= for book <- @books do %>
        <div class="tile">
          <div class="image">
            <img src="https://via.placeholder.com/150" />
          </div>
          <h4 class="title">
            <%= book.title %>
          </h4>
        </div>
      <% end %>
    </div>
  <% end %>
</section>
