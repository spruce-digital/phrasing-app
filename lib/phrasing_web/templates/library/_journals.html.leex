<section class="library--journals">
  <div class="title-bar">
    <h2 class="title">Journals</h2>
    <%= link to: Routes.journal_path(@socket, :new) do %>
      <i class="fal fa-plus"></i>
    <% end %>
  </div>

  <%= if Enum.empty? @journals do %>
    <div class="empty-message">
      You don't have any journals. <br/>
      Start by adding one by clicking the plus button in the upper right hand corner.
    </div>
  <% else %>
    Some journals
  <% end %>
</section>
